---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Developer documentation and guides' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title} | DeezDocs</title>
  </head>
  <body>
    <Navbar />
    
    <slot />
    
    <Footer />
  </body>
</html>

<style is:global>
  /* Custom properties for theming */
  :root {
    /* Dark theme colors */
    --color-bg-primary: #121212;
    --color-bg-secondary: #1e1e1e;
    --color-bg-navbar: #1a1a1a;
    --color-bg-footer: #141414;
    --color-bg-card: #1e1e1e;
    --color-bg-hover: #2a2a2a;
    --color-bg-code: #2a2a2a;
    --color-bg-badge: #2e2e2e;
    --color-bg-input: #2a2a2a;
    
    --color-text-primary: #e0e0e0;
    --color-text-secondary: #a0a0a0;
    --color-text-code: #e0e0e0;
    
    --color-primary: #F59E0B; /* Purple */
    --color-secondary: #14B8A6; /* Teal */
    --color-accent: #F97316; /* Orange */
    --color-success: #10B981; /* Green */
    --color-warning: #F59E0B; /* Amber */
    --color-error: #EF4444; /* Red */
    
    --color-border: #333333;
    
    /* Typography */
    --font-sans: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 
                 'Helvetica Neue', Arial, sans-serif;
    --font-mono: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, 
                 'Liberation Mono', monospace;
  }
  
  /* Reset styles */
  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
  }
  
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-family: var(--font-sans);
    background-color: var(--color-bg-primary);
    color: var(--color-text-primary);
    line-height: 1.6;
    font-size: 16px;
    min-height: 100vh;
  }

  kbd {
    background-color: var(--color-border);
    font-size: small;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-family: var(--font-mono);
    color: var(--color-text-code);
    line-height: 1;
  }
  
  /* Utility classes */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .container-narrow {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  /* Content typography */
  h1, h2, h3, h4, h5, h6 {
    margin-top: 1em;
    margin-bottom: 0.75em;
    line-height: 1.2;
    font-weight: 600;
  }
  
  h1 {
    font-size: 2.5rem;
    margin-top: 0;
  }
  
  h2 {
    font-size: 2rem;
  }
  
  h3 {
    font-size: 1.5rem;
  }
  
  h4 {
    font-size: 1.25rem;
  }
  
  p {
    margin-bottom: 1.5rem;
  }
  
  a {
    color: var(--color-primary);
    text-decoration: none;
  }
  
  a:hover {
    text-decoration: underline;
  }
  
  /* Code styling */
  pre {
    background-color: var(--color-bg-code);
    border-radius: 6px;
    padding: 1rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
    border: 1px solid var(--color-border);
  }
  
  code {
    font-family: var(--font-mono);
    color: var(--color-text-code);
    font-size: 0.9em;
  }
  
  p code, li code {
    background-color: var(--color-bg-code);
    padding: 0.2em 0.4em;
    border-radius: 3px;
  }
  
  /* Lists */
  ul, ol {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }
  
  li {
    /* margin-bottom: 0.5rem; */
  }
  
  /* Tables */
  table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
  }
  
  th, td {
    padding: 0.75rem;
    border: 1px solid var(--color-border);
  }
  
  th {
    background-color: var(--color-bg-secondary);
    text-align: left;
  }
  
  /* Blockquotes */
  blockquote {
    border-left: 4px solid var(--color-primary);
    padding-left: 1rem;
    margin-left: 0;
    margin-right: 0;
    margin-bottom: 1.5rem;
    color: var(--color-text-secondary);
  }
  
  /* Horizontal rule */
  hr {
    border: 0;
    height: 1px;
    background-color: var(--color-border);
    margin: 2rem 0;
  }
  
  /* Images */
  img {
    max-width: 100%;
    height: auto;
    border-radius: 6px;
  }
  
  /* Animation utility classes */
  .fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  .slide-up {
    animation: slideUp 0.5s ease-out;
  }
  
  @keyframes slideUp {
    from { transform: translateY(20px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  .example {
    width: 264px;
    height: 170px;
    overflow: hidden;
    transition: height .5s;
    interpolate-size: allow-keywords;
    text-align: center;
    padding: 1.5rem;
  
    img {
      height: 140px;
      border-radius: 50%;
      border: 4px solid;
    }
    
    p {
      text-wrap: pretty;
      padding: 6px;
    }

    &:hover {
      height: auto;
    }
  }
</style>