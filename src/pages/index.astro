---
import Layout from '../layouts/Layout.astro';
import ArticleList from '../components/ArticleList.astro';
import CategoryList from '../components/CategoryList.astro';
import { getCollection } from 'astro:content';

// Get all articles
const allArticles = await getCollection('articles');

// Get featured articles
const featuredArticles = allArticles
  .filter(article => article.data.featured)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

// Get recent articles (excluding featured ones)
const recentArticles = allArticles
  .filter(article => !article.data.featured)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 6);
---

<Layout title="Developer Documentation and Guides">
  <main>
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="fade-in">Developer Documentation</h1>
          <p class="subtitle slide-up">Comprehensive guides and references for modern web development</p>
          <div class="search-box">
            <input type="text" placeholder="Search for documentation..." />
            <button>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </section>
    
    <section class="main-content">
      <div class="container">
        {featuredArticles.length > 0 && (
          <ArticleList 
            articles={featuredArticles}
            title="Featured Articles"
            featured={true}
          />
        )}
        
        <div class="content-grid">
          <div class="main-col">
            <ArticleList 
              articles={recentArticles} 
              title="Recent Articles"
            />
          </div>
          
          <!-- <div class="sidebar">
            <CategoryList />
          </div> -->
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .hero {
    padding: 4rem 0;
    background: linear-gradient(135deg, #1a1a1a 0%, #121212 100%);
    position: relative;
    overflow: hidden;
  }
  
  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.1) 0%, rgba(20, 184, 166, 0.05) 25%, transparent 50%);
    transform: rotate(30deg);
    z-index: 1;
    animation: pulse 15s ease-in-out infinite alternate;
  }
  
  @keyframes pulse {
    0% { opacity: 0.5; transform: rotate(30deg) scale(1); }
    100% { opacity: 0.8; transform: rotate(30deg) scale(1.1); }
  }
  
  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }
  
  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(to right, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .sidebar {
    margin-top: 95px;
  }
  
  .subtitle {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
  }
  
  .search-box {
    display: flex;
    max-width: 500px;
    margin: 0 auto;
    background-color: var(--color-bg-input);
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid var(--color-border);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .search-box:hover, .search-box:focus-within {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.3);
    border-color: var(--color-primary);
  }
  
  .search-box input {
    flex: 1;
    border: none;
    background: none;
    padding: 1rem;
    font-size: 1rem;
    color: var(--color-text-primary);
    outline: none;
  }
  
  .search-box button {
    background: var(--color-primary);
    border: none;
    padding: 0 1.5rem;
    color: white;
    cursor: pointer;
    transition: background 0.3s ease;
  }
  
  .search-box button:hover {
    background: #7c3aed;
  }
  
  .main-content {
    padding: 3rem 0;
  }
  
  .content-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-top: 2rem;
  }
  
  .main-col {
    min-width: 0;
  }
  
  @media (max-width: 1024px) {
    .content-grid {
      grid-template-columns: 1fr;
    }
    
    .sidebar {
      order: -1;
    }
  }
  
  @media (max-width: 768px) {
    .hero {
      padding: 3rem 0;
    }
    
    .hero h1 {
      font-size: 2.25rem;
    }
    
    .subtitle {
      font-size: 1.125rem;
    }
  }
</style>